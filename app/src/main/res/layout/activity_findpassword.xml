<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    >

    <ImageView
        android:layout_marginStart="22px"
        android:layout_marginTop="41px"
        android:id="@+id/backBtn"
        android:layout_width="37px"
        android:layout_height="45px"
        android:src="@drawable/back"
        android:layout_gravity="top|left"/>


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textStyle="bold"
            android:textColor="#2AACA6"
            android:textSize="85px"
            android:shadowColor="#A6A6A6"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="9"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/email"
            android:layout_marginTop="30px"
            android:inputType="textWebEmailAddress"
            android:layout_gravity="center"
            android:layout_width="603px"
            android:layout_height="100px"
            android:hint="이메일"
            android:paddingLeft="25px"
            android:textSize="40px"
            android:background="@drawable/layout_round"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58px"
                android:text="비밀번호 재설정 링크가 전송됩니다."
                android:textStyle="bold"
                android:textColor="#989090"
                android:textSize="40px"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15px"/>

        <Button
            android:id="@+id/findPW"
            android:layout_marginTop="20px"
            android:layout_width="603px"
            android:layout_height="100px"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/layout_round"
            android:textColor="@color/white"
            android:backgroundTint="#2AACA6"
            android:text="비밀번호 재설정 메일 전송"
            android:textSize="42px"/>



    </LinearLayout>


</RelativeLayout>