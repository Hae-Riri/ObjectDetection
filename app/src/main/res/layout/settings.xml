<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_marginStart="22px"
        android:layout_marginTop="41px"
        android:id="@+id/backBtn"
        android:layout_width="37px"
        android:layout_height="45px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textStyle="bold"
        android:textColor="#2AACA6"
        android:layout_marginTop="239px"
        android:textSize="65px"
        android:shadowColor="#A6A6A6"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="9"
        android:layout_gravity="center"/>
    
    <LinearLayout
        android:layout_width="572px"
        android:layout_height="208px"
        android:background="@drawable/setting_layout_round"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90px"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_marginTop="22px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="40px"
                android:layout_width="wrap_content"
                android:layout_height="55px"
                android:text="이        름"
                android:textSize="30px"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="아이휠"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="40px"
                android:layout_width="wrap_content"
                android:layout_height="55px"
                android:text="이  메  일"
                android:textSize="30px"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="user@eyewheel.com"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="40px"
                android:layout_width="wrap_content"
                android:layout_height="55px"
                android:text="전화번호"
                android:textSize="30px"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="010-1212-3434"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
    android:layout_marginTop="25px"
    android:layout_width="572px"
    android:layout_height="271px"
    android:orientation="vertical"
    android:background="@drawable/setting_layout_round"
    android:gravity="center_vertical"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:text="계정"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="40px" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="로그아웃"
        android:textColor="#000000"
        android:layout_marginStart="40px"
        android:layout_marginTop="35px"/>

    <TextView
        android:id="@+id/deleteEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="회원탈퇴"
        android:textColor="#000000"
        android:layout_marginStart="40px"
        android:layout_marginTop="22px"/>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="25px"
        android:layout_width="572px"
        android:layout_height="185px"
        android:orientation="vertical"
        android:background="@drawable/setting_layout_round"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="연락처"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="40px" />

        <TextView
            android:id="@+id/gotoList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="연락처 설정"
            android:textColor="#000000"
            android:layout_marginStart="40px"
            android:layout_marginTop="22px"/>
    </LinearLayout>

</LinearLayout>