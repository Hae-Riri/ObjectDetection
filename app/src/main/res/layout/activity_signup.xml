<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"

    >

    <ImageView
        android:layout_marginStart="22px"
        android:layout_marginTop="41px"
        android:id="@+id/backBtn"
        android:layout_width="37px"
        android:layout_height="45px"
        android:src="@drawable/back"
        android:layout_gravity="top|left"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textStyle="bold"
            android:textColor="#2AACA6"
            android:textSize="85px"
            android:shadowColor="#A6A6A6"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="9"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/userName"
            android:layout_marginTop="30px"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:layout_width="603px"
            android:layout_height="100px"
            android:hint="이름(본명)"
            android:paddingLeft="25px"
            android:textSize="40px"
            android:background="@drawable/layout_round"/>

        <EditText
            android:id="@+id/userEmail"
            android:layout_marginTop="30px"
            android:inputType="textWebEmailAddress"
            android:layout_gravity="center"
            android:layout_width="603px"
            android:layout_height="100px"
            android:hint="이메일"
            android:paddingLeft="25px"
            android:textSize="40px"
            android:background="@drawable/layout_round"/>

        <EditText
            android:inputType="phone"
            android:id="@+id/userPhone"
            android:layout_marginTop="30px"
            android:layout_width="603px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:hint="휴대폰 번호"
            android:textSize="40px"
            android:paddingLeft="25px"
            android:background="@drawable/layout_round"/>

        <Button
            android:id="@+id/doneSignUp"
            android:layout_marginTop="30px"
            android:layout_width="603px"
            android:layout_height="100px"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/layout_round"
            android:textColor="@color/white"
            android:backgroundTint="#2AACA6"
            android:text="회원가입"
            android:textSize="42px"/>



    </LinearLayout>


</RelativeLayout>